        HEADERSIDEMENU.classList.add("HEADERSIDEMENUOPENED");
        document.querySelector(".HEADERSIDEMENUCONTENT").style.display = "block";
    })
    let HEADERSIDEMENUCLOSE = document.querySelector(".HEADERSIDEMENUCLOSE")
    HEADERSIDEMENUCLOSE.addEventListener("click", (event) => {
        HEADERSIDEMENU.classList.remove("HEADERSIDEMENUOPENED");
        document.querySelector(".HEADERSIDEMENUCONTENT").style.display = "none";
    })

    let exercisesHtml = document.querySelector(".HEADEREXERCISESHTMLBUTTON");
    let HEADERSIDEMENUEXERCISESHTML = document.querySelector("#HEADERSIDEMENUEXERCISESHTML");
