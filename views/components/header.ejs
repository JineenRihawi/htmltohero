<script>
    let lang_code = "<%= lang %>";

    function getCookie(name) {
        // Construct the cookie name as a search pattern
        const cookiePattern = `${name}=`;
        const cookies = document.cookie.split('; '); // Split cookies into individual parts

        for (let cookie of cookies) {
            if (cookie.startsWith(cookiePattern)) {
                // Extract the cookie value
                return decodeURIComponent(cookie.substring(cookiePattern.length));
            }
        }

        // Return null if cookie is not found
        return null;
    }

    function deleteCookie(cookieName) {
        document.cookie = `${cookieName}=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;`;
    }

    let langSelect = document.querySelector(".LANGSELECT");
    langSelect.value = lang_code;
    langSelect.addEventListener("change", (e) => {
        var currentPathArray = window.location.pathname.split('/');
        if (currentPathArray[0].length !== 0) {
            currentPathArray[0] = e.target.value;
        } else {
            currentPathArray[1] = e.target.value;
        }
        window.location.href = currentPathArray.join('/')
    })

    let SEARCHBAR = document.querySelector(".HEADERSEARCH")
    let HEADERSIDEMENUSEARCH = document.querySelector(".HEADERSIDEMENUSEARCH")
    SEARCHBAR.addEventListener("keydown", function (event) {
        if (event.key === "Enter") {
            if (event.target.value.length > 0) {
                window.location.href = "/" + lang_code + "/" + "search/" + event.target.value;
            }
        }
    })
    HEADERSIDEMENUSEARCH.addEventListener("keydown", function (event) {
        if (event.key === "Enter") {
            if (event.target.value.length > 0) {
                window.location.href = "/" + lang_code + "/" + "search/" + event.target.value;
            }
        }
    })

    let loginButton = document.querySelector("#LOGINBUTTON");
    let HEADERSIDEMENULOGIN = document.querySelector("#HEADERSIDEMENULOGIN")
    loginButton.addEventListener("click", (event) => {
        window.location.href = "/" + lang_code + "/" + "login";
    });
    HEADERSIDEMENULOGIN.addEventListener("click", (event) => {
        window.location.href = "/" + lang_code + "/" + "login";
    });

    let profilePicture = document.querySelector("#PROFILEIMAGE");
    let HEADERSIDEMENUPROFILE = document.querySelector("#HEADERSIDEMENUPROFILE")
    let HEADERSIDEMENULOGOUT = document.querySelector("#HEADERSIDEMENULOGOUT")
    const TOKEN = getCookie("TOKEN");
    if (TOKEN) {
        profilePicture.style.display = "inline";
        HEADERSIDEMENUPROFILE.style.display = "flex";
        HEADERSIDEMENULOGOUT.style.display = "flex";
    } else {
        loginButton.style.display = "flex";
        HEADERSIDEMENULOGIN.style.display = "flex";
    }

    let HEADERLOGO = document.querySelector(".HEADERLOGO");
    HEADERLOGO.addEventListener("click", (event) => {
        window.location.href = "/" + lang_code;
    });

    let DROPDOWNMENUSMALLSCREEN = document.querySelector(".DROPDOWNMENUSMALLSCREEN")
    let HEADERSIDEMENU = document.querySelector(".HEADERSIDEMENU");
