<style>
    .CHAPTER {
        padding: 10px 10px 0 10px;
        color: #684444;
        /*background-color: #F48FB1;*/
        background-color: #fff0cc;
        font-size: 14px;
        font-family: "Arial";
        font-weight: bold;
        /*30 - 2*padding */
    }

    .SIDEMENUBUTTON:hover {
        background-color: #fee9b6;
    }

    .SIDEMENU {
        height: 100%;
        width: 100%;
        overflow-y: scroll;
        background-color: #fff0cc;
    }

    .SIDEMENUBUTTON {
        padding: 10px;
        color: #445368;
        /*background-color: #F48FB1;*/
        background-color: #fff0cc;
        font-size: 14px;
        font-family: "Arial";
        font-weight: bold;
        user-select: none;
        /*30 - 2*padding */
        cursor: pointer;
    }

    .SIDEMENUOPENBUTTON {
        display: none;
    }

    .SIDEMENUCLOSE {
        display: none;
        position: relative;
        top: 0;
        right: 0;
        font-size: 100%;
        user-select: none;
        padding: 5%;
        font-family: "Arial";
        font-weight: bold;
        color: #445368;
        cursor: pointer;
        width: fit-content;
    }

    @media (max-width: 1100px) {
        .SIDEMENUCLOSE {
            display: block;
            position: sticky;
        }

        .SIDEMENU {
            width: fit-content;
            display: none;
            position: absolute;
            bottom: 0;
            top: 0;
            background-color: #fff0cc;
            z-index: 2;
        }

        .PAGE {
            display: block;
        }

        :dir(ltr) {
            .SIDEMENUOPENBUTTON {
                position: absolute;
                top: 85px;
                left: 5px;
                display: block;
                cursor: pointer;
                width: fit-content;
            }

            .SIDEMENUOPENED {
                display: block;
                right: 50%;
            }

            .SIDEMENU {
                left: 0;
                right: auto;
            }
        }

        :dir(rtl) {
            .SIDEMENUOPENBUTTON {
                position: absolute;
                top: 85px;
                right: 5px;
                display: block;
                cursor: pointer;
                width: fit-content;
                transform: rotate(180deg);
            }

            .SIDEMENUOPENED {
                display: block;
                left: 50%;
            }

            .SIDEMENU {
                right: 0;
                left: auto;
            }
        }
    }
</style>

