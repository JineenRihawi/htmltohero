<!-- Required Meta Tags -->
<meta charset="UTF-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />

<!-- Dynamic Title and SEO Description -->
<meta name="description"
    content="HTML to Hero is a beginner-friendly website to learn HTML, CSS, and JavaScript step-by-step with interactive tutorials, examples, and projects." />
<meta name="keywords"
    content="HTML tutorial, CSS tutorial, JavaScript tutorial, web development, frontend, learn HTML, learn CSS, learn JavaScript" />
<meta name="author" content="Cenin Rihavi" />
<meta name="robots" content="index, follow" />
<meta name="revisit-after" content="7 days" />
<meta name="language" content="<%= lang %>" />

<!-- Canonical URL -->
