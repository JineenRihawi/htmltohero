<!DOCTYPE html>
<html dir="<%= t('direction') %>" lang="<%= lang %>">

<head>
    <%- include('components/metadata_info')%>
    <style>
        html,
        body {
            height: 100%;
            width: 100%;
            overflow-x: hidden;
            margin: 0%;
        }

        .CONTAINER {
            width: 100%;
        }

        .CENTER {
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .PAGE {
            height: calc(100% - 80px);
            /*100% - header*/
            width: 100%;
            overflow-x: hidden;
            overflow-y: scroll;
        }

        .ERRORCONTAINER {
            width: auto;
            padding: 30px;
            background-color: #e3a4a6;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .ERRORTEXT {
            text-align: center;
            font-size: 80px;
            font-family: "Arial";
            font-weight: bold;
            user-select: none;
            color: white;
        }

        .ERRORSMALLTEXT {
            text-align: center;
            font-size: 20px;
            font-family: "Arial";
            font-weight: bold;
            user-select: none;
            color: grey;
        }
    </style>
    <title>
        <%= t('notFoundPage.title') %>
    </title>
</head>

<body>
    
    <%- include('components/header') %>

    <div class="PAGE">

        <div class="CENTER">
            <div class="ERRORCONTAINER">
                <span class="ERRORTEXT"><%= t('notFoundPage.errorText') %></span>
                <span class="ERRORSMALLTEXT"><%= t('notFoundPage.smallText') %></span>
            </div>
        </div>

        <%- include('components/footer') %>

    </div>

    </div>

    <script>

        function getCookie(name) {
            // Construct the cookie name as a search pattern
            const cookiePattern = `${name}=`;
            const cookies = document.cookie.split('; '); // Split cookies into individual parts

            for (let cookie of cookies) {
                if (cookie.startsWith(cookiePattern)) {
                    // Extract the cookie value
                    return decodeURIComponent(cookie.substring(cookiePattern.length));
                }
            }

            // Return null if cookie is not found
            return null;
        }

        function deleteCookie(cookieName) {
            document.cookie = `${cookieName}=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;`;
        }

    </script>
</body>

</html>