<!DOCTYPE html>
<html dir="<%= t('direction') %>" lang="<%= lang %>">

<head>
    <%- include('../components/metadata_info')%>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.10/codemirror.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.10/theme/dracula.min.css">

    <!-- Include CodeMirror JavaScript library -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.10/codemirror.min.js"></script>

    <!-- Include the JavaScript mode for the language you want to highlight (e.g., JavaScript, HTML, etc.) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.10/mode/javascript/javascript.min.js"></script>
    <style>
        html,
        body {
            height: 100%;
            width: 100%;
            overflow: hidden;
            margin: 0%;
        }

        .PAGE {
            width: 100%;
            height: calc(100% - 80px);
            /* 100% - 2*padding */
            display: grid;
            grid-template-columns: 25% 75%;
        }

        .BODYCONTENT {
            width: calc(100% - 60px);
            /* 100% - 2*padding */
            height: auto;
            padding: 30px;
            font-family: "Arial";
            color: #1a2028;
        }

        .BODY {
            width: 100%;
            height: 100%;
            overflow-x: hidden;
            overflow-y: scroll;
        }

        .BODYCONTENT h1 {
            color: #fdc535;
        }

        .CHECKBAR {
            background-color: #445368;
            margin-bottom: 10px;
            width: calc(100%-6px);
            padding: 3px;
            display: flex;
            flex-direction: row-reverse;
            user-select: none;
            font-family: "Arial";
            color: white;
        }

        #SIDEMENUBUTTON-2 {
            background-color: #684444;
            color: white;
        }
    </style>
    <title>
        HTMLtoHero
    </title>
</head>

<body>

    <%- include('../components/header') %>

    <div class="PAGE">
            <%- include('../components/htmlTutorialsSideMenu') %>
        <div class="BODY">
            <div class="BODYCONTENT">

                <h1><%= t('htmlTutorials.chapter2.page1.title1') %></h1>
                <p><%= t('htmlTutorials.chapter2.page1.paragraph1') %></p>

                    <hr>

                <h1><%= t('htmlTutorials.chapter2.page1.title2') %></h1>
                <p><%= t('htmlTutorials.chapter2.page1.paragraph2') %></p>

                    <hr>

                <h1><%= t('htmlTutorials.chapter2.page1.title3') %></h1>
                <ol>
                    <li><%= t('htmlTutorials.chapter2.page1.list1Item1') %></li>
                    <li><%= t('htmlTutorials.chapter2.page1.list1Item2') %></li>
                    <li><%= t('htmlTutorials.chapter2.page1.list1Item3') %></li>
                </ol>

                <hr>

                <h1><%= t('htmlTutorials.chapter2.page1.title4') %></h1>
                <p><%= t('htmlTutorials.chapter2.page1.paragraph3') %></p>

                <h3><%= t('htmlTutorials.chapter2.page1.codeTitle1') %></h3>
                <textarea id="CODE1">
      &lt;!DOCTYPE html&gt; &lt;!-- Declares the document as HTML5 --&gt;
      &lt;html&gt;
        &lt;head&gt;
          &lt;title&gt;My First HTML Page&lt;/title&gt;
        &lt;/head&gt;
        &lt;body&gt;
          &lt;h1&gt;Hello, World!&lt;/h1&gt;
          &lt;p&gt;This is my first webpage using HTML5!&lt;/p&gt;
        &lt;/body&gt;
      &lt;/html&gt;
            </textarea>

            <hr>

                <h2><%= t('htmlTutorials.chapter2.page1.listTitle2') %></h2>
                <ul>
                    <li><%= t('htmlTutorials.chapter2.page1.list2Item1') %></li>
                    <li><%= t('htmlTutorials.chapter2.page1.list2Item2') %></li>
                    <li><%= t('htmlTutorials.chapter2.page1.list2Item3') %></li>
                </ul>

            </div>

            <div class="CHECKBAR">
                <input type="CHECKBOX" id="CHECKPAGE">
                <%= t('htmlTutorials.markAsCompleted') %>
            </div>

            <%- include('../components/footer') %>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.8.0/highlight.min.js"></script>
    <script>

        function getCookie(name) {
            // Construct the cookie name as a search pattern
            const cookiePattern = `${name}=`;
            const cookies = document.cookie.split('; '); // Split cookies into individual parts

            for (let cookie of cookies) {
                if (cookie.startsWith(cookiePattern)) {
                    // Extract the cookie value
                    return decodeURIComponent(cookie.substring(cookiePattern.length));
                }
            }

            // Return null if cookie is not found
            return null;
        }

        function deleteCookie(cookieName) {
            document.cookie = `${cookieName}=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;`;
        }

        let page_link = 'html_doctype';

        document.addEventListener("DOMContentLoaded", (event) => { // Logout if password and email dont match ( prevent hacking accounts )
            fetch("/api/getAccount", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify({
                    email: getCookie("currentEmail"),
                })
            }).then(response => response.json())
                .then(data => {
                    if (getCookie("currentEmail") !== data.email || getCookie("currentPassword") !== data.password) {
                        deleteCookie("isLoggedIn");
                        deleteCookie("currentEmail");
                        deleteCookie("currentPassword");
                        window.location.href = "/" + lang_code;
                    }
                })
        });


        let checkpage = document.querySelector("#CHECKPAGE");

        fetch("/api/checkCheckedHtmlPage", {
            method: "POST",
            headers: {
                "Content-Type": "application/json"
            },
            body: JSON.stringify({
                PAGELINK: page_link,
            })
        }).then(response => response.json()).then(data => {
            if (data.PAGECHECKED === true) {
                checkpage.checked = true;
                checkpage.disabled = true;
            }
        })

        var editor = CodeMirror.fromTextArea(document.getElementById("CODE1"), {
            lineNumbers: true,  // Display line numbers
            mode: "javascript", // Language mode for syntax highlighting
            theme: "dracula",    // Theme (change to any supported theme)
            matchBrackets: true, // Highlight matching brackets
            autoCloseBrackets: true, // Automatically close brackets
            lineWrapping: true, // Enable line wrapping
            readOnly: true,
        });
        editor.setSize(null, 175);

        checkpage.addEventListener("change", (event) => {
            if (checkpage.checked) {
                checkpage.disabled = true;
                const isLoggedIn = getCookie("isLoggedIn");
                if (isLoggedIn === null || isLoggedIn == "false") {
                    event.target.checked = false;
                    window.location.href = "/" + lang_code + "/" + "login";
                }
                if (isLoggedIn == "true") {
                    fetch("/api/checkHtmlPage", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json"
                        },
                        body: JSON.stringify({
                            link: page_link,
                        })
                    });
                }
            }
        });
    </script>
</body>

</html>