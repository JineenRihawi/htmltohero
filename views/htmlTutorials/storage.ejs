            <button type="button" onclick="clearStorage()">Clear Storage</button>
        </form>
        <p>Saved Theme: <span id="saved-theme"></span></p>
        <script>
            function saveTheme() {
                const theme = document.getElementById('theme').value;
                localStorage.setItem('theme', theme);
                document.getElementById('saved-theme').textContent = theme;
            }
            function clearStorage() {
                localStorage.removeItem('theme');
                document.getElementById('saved-theme').textContent = '';
            }
            window.onload = function() {
                const savedTheme = localStorage.getItem('theme');
                if (savedTheme) {
                    document.getElementById('saved-theme').textContent = savedTheme;
                }
            };
        </script>
    </main>
