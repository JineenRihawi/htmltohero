            <%- include('../components/htmlTutorialsSideMenu') %>
        <div class="BODY">
            <div class="BODYCONTENT">
                <h1><%= t('htmlTutorials.chapter6.page1.title1') %></h1>
                <p><%= t('htmlTutorials.chapter6.page1.paragraph1') %></p>

