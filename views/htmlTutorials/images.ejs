        }

        .CHECKBAR {
            background-color: #445368;
            margin-bottom: 10px;
            width: calc(100% - 6px);
            padding: 3px;
            display: flex;
            flex-direction: row-reverse;
            user-select: none;
            font-family: "Arial";
            color: white;
        }

        #SIDEMENUBUTTON-23 {
            background-color: #684444;
            color: white;
        }

        .NOTE {
            background-color: #f0f4f8;
            padding: 15px;
            border-left: 4px solid #fdc535;
            margin: 20px 0;
            font-style: italic;
        }
    </style>
    <title>HTMLtoHero</title>
</head>
