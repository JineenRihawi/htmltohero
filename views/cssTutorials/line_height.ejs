        }

        .note {
            background-color: #f9f9f9;
            padding: 15px;
            border-left: 4px solid #fdc535;
            margin: 20px 0;
        }

        @media screen and (max-width: 600px) {
            th, td {
                padding: 6px;
                font-size: 14px;
            }
