            color: white;
        }

        .table-container {
            width: 100%;
            overflow-x: auto;
            margin: 20px 0;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            min-width: 300px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
            width: 33.33%;
        }

        th {
            background-color: #f2f2f2;
        }

        ul {
            margin: 15px 0;
            padding-left: 20px;
        }

        li {
            margin-bottom: 8px;
        }

        .note {
            background-color: #f9f9f9;
            padding: 15px;
            border-left: 4px solid #fdc535;
            margin: 20px 0;
        }

        .CodeMirror {
            background: #282a36 !important;
            color: #f8f8f2 !important;
            border: 1px solid #44475a;
            font-family: 'Consolas', monospace;
            font-size: 14px;
        }

        .CodeMirror-gutters {
            background: #282a36 !important;
            border-right: 1px solid #44475a;
        }

        @media screen and (max-width: 600px) {
            th, td {
                padding: 6px;
                font-size: 14px;
            }
        }
    </style>
