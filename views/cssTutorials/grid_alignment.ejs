        .PAGE {
            width: 100%;
            height: calc(100% - 80px);
            display: grid;
            grid-template-columns: 25% 75%;
        }

        .BODYCONTENT {
            width: calc(100% - 60px);
            height: auto;
            padding: 30px;
            font-family: "Arial";
            color: #1a2028;
        }

        .BODY {
            width: 100%;
            height: 100%;
            overflow-x: hidden;
            overflow-y: scroll;
        }

