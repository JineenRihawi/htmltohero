<!DOCTYPE html>
<html dir="<%= t('direction') %>" lang="<%= lang %>">
<head>
    <%- include('../components/metadata_info')%>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.10/codemirror.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.10/theme/dracula.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.10/codemirror.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.10/mode/javascript/javascript.min.js"></script>
    <style>
        html,
        body {
            height: 100%;
            width: 100%;
            overflow: hidden;
            margin: 0%;
        }

        .PAGE {
            width: 100%;
            height: calc(100% - 80px);
            display: grid;
            grid-template-columns: 25% 75%;
        }

        .BODYCONTENT {
            width: calc(100% - 60px);
            height: auto;
            padding: 30px;
            font-family: "Arial";
            color: #1a2028;
        }

        .BODY {
            width: 100%;
            height: 100%;
            overflow-x: hidden;
            overflow-y: scroll;
        }

        .BODYCONTENT h1 {
            color: #fdc535;
        }

        .BODYCONTENT h3 {
            color: #445368;
        }

        #SIDEMENUBUTTON-7 {
            background-color: #684444;
            color: white;
        }

        .NOTE {
            background-color: #f0f4f8;
            padding: 15px;
            border-left: 4px solid #fdc535;
            margin: 20px 0;
            font-style: italic;
        }

        .TABLE {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
        }

        .TABLE th, .TABLE td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        .TABLE th {
            background-color: #f2f2f2;
            color: #445368;
        }
    </style>
    <title>HTMLtoHero</title>
</head>
<body>
    <%- include('../components/header') %>
    <div class="PAGE">
            <%- include('../components/jsTutorialsSideMenu') %>
        <div class="BODY">
            <div class="BODYCONTENT">
                <h1><%= t('jsTutorials.chapter2.page3.title1') %></h1>
                <p><%= t('jsTutorials.chapter2.page3.paragraph1') %></p>
                <p><%= t('jsTutorials.chapter2.page3.paragraph1a') %></p>

                <hr>

                <h1><%= t('jsTutorials.chapter2.page3.title2') %></h1>
                <p><%= t('jsTutorials.chapter2.page3.paragraph2') %></p>
                <p><%= t('jsTutorials.chapter2.page3.paragraph2a') %></p>
                <h3><%= t('jsTutorials.chapter2.page3.codeTitle1') %></h3>
                <textarea id="CODE1">
let person = {
    name: "Alice",
    age: 30
};
console.log(person.name); // Outputs: Alice
person.job = "Developer";
console.log(person.job); // Outputs: Developer
                </textarea>

                <hr>

                <h1><%= t('jsTutorials.chapter2.page3.title3') %></h1>
                <p><%= t('jsTutorials.chapter2.page3.paragraph3') %></p>
                <p><%= t('jsTutorials.chapter2.page3.paragraph3a') %></p>
                <table class="TABLE">
                    <tr>
                        <th><%= t('jsTutorials.chapter2.page3.tableHeader1') %></th>
                        <th><%= t('jsTutorials.chapter2.page3.tableHeader2') %></th>
                    </tr>
                    <tr>
                        <td><%= t('jsTutorials.chapter2.page3.tableRow1Col1') %></td>
                        <td><%= t('jsTutorials.chapter2.page3.tableRow1Col2') %></td>
                    </tr>
                    <tr>
                        <td><%= t('jsTutorials.chapter2.page3.tableRow2Col1') %></td>
                        <td><%= t('jsTutorials.chapter2.page3.tableRow2Col2') %></td>
                    </tr>
                </table>
                <h3><%= t('jsTutorials.chapter2.page3.codeTitle2') %></h3>
                <textarea id="CODE2">
let fruits = ["apple", "banana", "orange"];
console.log(fruits[1]); // Outputs: banana
fruits.push("grape");
console.log(fruits); // Outputs: ["apple", "banana", "orange", "grape"]
                </textarea>

                <div class="NOTE">
                    <p><%= t('jsTutorials.chapter2.page3.note1') %></p>
                </div>

                <hr>

                <h1><%= t('jsTutorials.chapter2.page3.title4') %></h1>
                <p><%= t('jsTutorials.chapter2.page3.paragraph4') %></p>
                <p><%= t('jsTutorials.chapter2.page3.paragraph4a') %></p>
                <h3><%= t('jsTutorials.chapter2.page3.codeTitle3') %></h3>
                <textarea id="CODE3">
let user = {
    name: "Bob",
    hobbies: ["reading", "gaming"]
};
console.log(user.hobbies[0]); // Outputs: reading
user.hobbies.push("coding");
console.log(user.hobbies); // Outputs: ["reading", "gaming", "coding"]
                </textarea>

                <div class="NOTE">
                    <p><%= t('jsTutorials.chapter2.page3.note2') %></p>
                </div>
            </div>
            <%- include('../components/jsTutorialsCheckbar', { page_link: 'objects_arrays' }) %>
            <%- include('../components/footer') %>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.8.0/highlight.min.js"></script>
    <script>
        function getCookie(name) {
            const cookiePattern = `${name}=`;
            const cookies = document.cookie.split('; ');
            for (let cookie of cookies) {
                if (cookie.startsWith(cookiePattern)) {
                    return decodeURIComponent(cookie.substring(cookiePattern.length));
                }
            }
            return null;
        }

        function deleteCookie(cookieName) {
            document.cookie = `${cookieName}=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;`;
        }

        var editor1 = CodeMirror.fromTextArea(document.getElementById("CODE1"), {
            lineNumbers: true,
            mode: "javascript",
            theme: "dracula",
            matchBrackets: true,
            autoCloseBrackets: true,
            lineWrapping: true,
            readOnly: true,
        });
        editor1.setSize(null, 140);

        var editor2 = CodeMirror.fromTextArea(document.getElementById("CODE2"), {
            lineNumbers: true,
            mode: "javascript",
            theme: "dracula",
            matchBrackets: true,
            autoCloseBrackets: true,
            lineWrapping: true,
            readOnly: true,
        });
        editor2.setSize(null, 90);

        var editor3 = CodeMirror.fromTextArea(document.getElementById("CODE3"), {
            lineNumbers: true,
            mode: "javascript",
            theme: "dracula",
            matchBrackets: true,
            autoCloseBrackets: true,
            lineWrapping: true,
            readOnly: true,
        });
        editor3.setSize(null, 140);
    </script>
</body>
</html>